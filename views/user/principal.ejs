            <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 animate-scale-in" style="animation-delay: 0.5s">
                <div class="space-y-4">
                    <!-- Activity Item 1 -->
                    <div class="flex items-center space-x-4 p-4 bg-blue-50 rounded-xl">

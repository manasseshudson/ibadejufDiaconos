    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes scaleIn {
            from {
                transform: scale(0.9);
            }
            to {
                transform: scale(1);
            }
        }
        
        .form-section {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .form-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .input-group {
            position: relative;
        }

        .input-group input:focus + label,
        .input-group input:not(:placeholder-shown) + label {
            transform: translateY(-1.5rem) scale(0.8);
            color: #3B82F6;
            background: white;
            padding: 0 0.25rem;
            z-index: 10;
        }

        .input-group select:focus + label,
        .input-group select.has-value + label,
        .input-group select:not([value=""]) + label {
            transform: translateY(-1.5rem) scale(0.8);
            color: #3B82F6;
            background: white;
            padding: 0 0.25rem;
            z-index: 10;
        }

        /* Estilo específico para selects vazios */
        .input-group select:invalid + label {
            transform: translateY(0) scale(1);
            color: #6B7280;
            background: transparent;
            padding: 0;
        }

        .input-group label {
            position: absolute;
            left: 0.75rem;
            top: 0.75rem;
            transition: all 0.2s;
            pointer-events: none;
            color: #6B7280;
            background: transparent;
            z-index: 5;
        }

        .floating-label {
            transform: translateY(-1.5rem) scale(0.8);
            color: #3B82F6;
            background: white;
            padding: 0 0.25rem;
            z-index: 10;
        }

        .input-group input:focus,
        .input-group select:focus {
            outline: none;
            border-color: #3B82F6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
    </style>
</head>

        // Handle floating labels
        document.addEventListener('DOMContentLoaded', function() {
            // Function to update select class and label
            function updateSelectLabel(select) {
                const label = select.nextElementSibling;
                if (label && label.tagName === 'LABEL') {
                    // Verifica se o select tem uma opção válida selecionada
                    const hasValidValue = select.value !== '' && select.value !== null && !select.options[select.selectedIndex]?.disabled;
                    
                    if (hasValidValue) {
                        select.classList.add('has-value');
                        label.classList.add('floating-label');
                    } else {
                        select.classList.remove('has-value');
                        label.classList.remove('floating-label');
                    }
                }
            }

            // Check for pre-filled inputs
            document.querySelectorAll('input').forEach(input => {
                if (input.value.trim() !== '') {
                    const label = input.nextElementSibling;
                    if (label && label.tagName === 'LABEL') {
                        label.classList.add('floating-label');
                    }
                }
            });

            // Initialize selects
            document.querySelectorAll('select').forEach(select => {
                updateSelectLabel(select);
                
                // Handle select changes
                select.addEventListener('change', function() {
                    updateSelectLabel(this);
                });

                // Handle select focus
                select.addEventListener('focus', function() {
                    const label = this.nextElementSibling;
                    if (label && label.tagName === 'LABEL') {
                        label.classList.add('floating-label');
                        this.classList.add('has-value');
                    }
                });

                // Handle select blur
                select.addEventListener('blur', function() {
                    updateSelectLabel(this);
                });
            });

            // Handle input focus and blur events
            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('focus', function() {
                    const label = this.nextElementSibling;
                    if (label && label.tagName === 'LABEL') {
                        label.classList.add('floating-label');
                    }
                });

                input.addEventListener('blur', function() {
                    const label = this.nextElementSibling;
                    if (label && label.tagName === 'LABEL' && this.value.trim() === '') {
                        label.classList.remove('floating-label');
                    }
                });
            });
        });


<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Curso Responsivo</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">

  <!-- Header mobile -->
  <header class="md:hidden bg-gray-800 px-4 py-3 flex justify-between items-center shadow">
    <h1 class="font-bold text-lg">üìö Curso</h1>
    <button id="menuToggle" class="text-white focus:outline-none">
      ‚ò∞
    </button>
  </header>

  <div class="flex flex-col md:flex-row min-h-screen">
    <!-- Sidebar -->
    <aside id="sidebar" class="w-full md:w-80 bg-gray-800 p-5 overflow-y-auto hidden md:block">
      <h2 class="text-xl font-bold mb-4 border-b border-gray-700 pb-2">Conte√∫do da Mat√©ria</h2>
      <div class="grid">
        <% aulas.forEach(dados=> { %>
        <div class="video-item bg-gray-700 border-b border-gray-600 px-4 py-3 cursor-pointer hover:bg-gray-600 transition" data-video="https://www.youtube.com/embed/yn833KsHFEw" data-idVideo="<%= dados.id_aulas %>">
          <div class="flex justify-between items-center">
            <h3 class="font-semibold text-sm"><%= dados.descricao %></h3>
          </div>
        </div>
        <% }) %>
      </div>
    </aside>

   <main class="flex-1 p-4 flex flex-col items-center justify-center">
  <div class="w-full max-w-5xl">
    <div class="aspect-video w-full rounded-xl overflow-hidden shadow-2xl border border-gray-700">
	  <iframe
        id="videoPlayer"
        class="w-full h-full"
        src="https://www.youtube.com/embed/dQw4w9WgXcQ"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
    <div class="mt-4 text-center">
      <button class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded shadow">
        Clique Aqui
      </button>
    </div>
  </div>
</main>
  </div>

<script>
  const items = document.querySelectorAll('.video-item');
  const player = document.getElementById('videoPlayer');
  const menuToggle = document.getElementById('menuToggle');
  const sidebar = document.getElementById('sidebar');
  const botao = document.querySelector('button.bg-red-600');

  let videoSelecionadoId = null; // Armazena o ID do v√≠deo selecionado

  items.forEach(item => {
    item.addEventListener('click', () => {
      const videoUrl = item.getAttribute('data-video');
      const id = item.getAttribute('data-idVideo');
      
      player.src = videoUrl;
      videoSelecionadoId = id;

      // Fecha o menu no mobile
      if (window.innerWidth < 768) sidebar.classList.add('hidden');
    });
  });

  // Toggle sidebar no mobile
  menuToggle.addEventListener('click', () => {
    sidebar.classList.toggle('hidden');
  });

  // Evento do bot√£o "Clique Aqui"
  botao.addEventListener('click', () => {
    if (videoSelecionadoId) {
      alert(`ID do v√≠deo selecionado: ${videoSelecionadoId}`);
    } else {
      alert('Nenhum v√≠deo selecionado ainda.');
    }
  });
</script>

</body>
</html>
